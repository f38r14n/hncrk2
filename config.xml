<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="org.btkp_diy.aksara_jawa" version="2.0.0.0">

    <name>Hanacaraka</name>
    <description>Belajar Aksara Jawa</description>
    <author href="http://btkp-diy.or.id" email="btkpyogyakarta@gmail.com">BTKP DIY</author>

    <icon src="icon-128.png" width="128" height="128" />
    <icon src="icon-256.png" width="256" height="256" gap:role="default" />

    <icon gap:platform="android" gap:qualifier="ldpi" src="www/res/icon/android/icon-36-ldpi.png" />
    <icon gap:platform="android" gap:qualifier="mdpi" src="www/res/icon/android/icon-48-mdpi.png" />
    <icon gap:platform="android" gap:qualifier="hdpi" src="www/res/icon/android/icon-72-hdpi.png" />
    <icon gap:platform="android" gap:qualifier="xhdpi" src="www/res/icon/android/icon-96-xhdpi.png" />

    <icon gap:platform="ios" width="57" height="57" src="www/res/icon/ios/icon-57.png" />
    <icon gap:platform="ios" width="72" height="72" src="www/res/icon/ios/icon-72.png" />
    <icon gap:platform="ios" width="114" height="114" src="www/res/icon/ios/icon-57-2x.png" />
    <icon gap:platform="ios" width="144" height="144" src="www/res/icon/ios/icon-72-2x.png" />

    <gap:splash gap:platform="ios" width="480" height="320" src="www/res/screen/ios/screen-iphone-landscape.png" />
    <gap:splash gap:platform="ios" width="960" height="640" src="www/res/screen/ios/screen-iphone-landscape-2x.png" />
    <gap:splash gap:platform="ios" width="568" height="320" src="www/res/screen/ios/screen-iphone-landscape-568h.png" />
    <gap:splash gap:platform="ios" width="1136" height="640" src="www/res/screen/ios/screen-iphone-landscape-568h-2x.png" />
    <gap:splash gap:platform="ios" width="1024" height="768" src="www/res/screen/ios/screen-ipad-landscape.png" />
    <gap:splash gap:platform="ios" width="2048" height="1536" src="www/res/screen/ios/screen-ipad-landscape.png" />

    <preference name="permissions" value="none" />
    <preference name="android-targetSdkVersion" value="19" />
    <preference name="android-minSdkVersion" value="9" />

    <feature name="http://api.phonegap.com/1.0/network" />
    <feature name="http://api.phonegap.com/1.0/notification" />
    <gap:plugin name="org.apache.cordova.media" />
    <gap:plugin name="org.apache.cordova.splashscreen" />
    <gap:plugin name="org.apache.cordova.vibration" />

    <preference name="orientation" value="landscape" />
    <preference name="fullscreen" value="true" />
    <preference name="target-device" value="universal" />
    <preference name="webviewbounce" value="false" />
    <preference name="prerendered-icon" value="true" />
    <preference name="show-splash-screen-spinner" value="false" />
    <preference name="auto-hide-splash-screen" value="false" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="SplashScreen" value="screen-iphone-landscape" />
	<preference name="SplashScreenDelay" value="3000" />

    <gap:config-file platform="ios" parent="UIStatusBarHidden">
        <true/>
    </gap:config-file>

    <gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance">
        <false/>
    </gap:config-file>

    <!-- Optional splash screen image, e.g.: -->
    <!-- <gap:splash src="splash.png" width="1024" height="768" /> -->
	<access origin="*" />
</widget>
